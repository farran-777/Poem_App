<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".twinkle_star"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    >
    <TextView
        android:layout_marginTop="100sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twinkle Twinkle, Little Star"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/kaushanscript_regular"
        android:textColor="#E91E63"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How I wonder what you are"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/kaushanscript_regular"
        android:textColor="#E91E63"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Up above the world so high"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/kaushanscript_regular"
        android:textColor="#E91E63"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Like a diamond in the sky"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/kaushanscript_regular"
        android:textColor="#E91E63"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twinkle Twinkle, Little Star"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/kaushanscript_regular"
        android:textColor="#E91E63"/>
    <TextView
        android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="How I wonder what you are!"
    android:textSize="35dp"
    android:gravity="center"
    android:textStyle="bold"
    android:fontFamily="@font/kaushanscript_regular"
    android:textColor="#E91E63"    />




</LinearLayout>